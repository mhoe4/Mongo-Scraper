    <div class="container">
        <div class="content-body">
            {{#each articles}}
            <div class='card'>
              <div class='card-header'>
                <h3>
                  <a href="{{url}}" class='article-link' target='_blank' rel='noopener noreferrer'>
                    {{headline}}
